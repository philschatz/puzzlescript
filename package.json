{
  "scripts": {
    "lint": "standard --fix preprocessor.js ./test/**/*.js",
    "tsc": "tsc --watch",
    "prestart": "rm -rf ./lib/; rm ./coverage/coverage-gist*.json; rm -rf ./coverage/lcov-report/; tsc",
    "start": "node -r source-map-support/register ./lib/runGame.js",
    "start-coverage": "tsc && istanbul cover -x '**/node_modules/**' ./lib/runGame.js",
    "start-debug": "tsc && node --inspect-brk lib/runGame.js",
    "start-debug-cli": "tsc && node inspect lib/runGame.js",
    "poststart": "npm run-script coverage && echo 'Generated coverage. Type open ./coverage/lcov-html/index.html to see it'",
    "coverage": "istanbul report --root ./coverage/ lcov",
    "test": "jest --coverage --updateSnapshot @*",
    "test-debug": "node --inspect-brk -r source-map-support/register $(npm bin)/jest -i --updateSnapshot $@",
    "posttest": "npm run-script lint",
    "watch": "jest --updateSnapshot --watch",
    "debug": "tsc; node --inspect-brk lib/runGame.js"
  },
  "dependencies": {
    "@types/axel": "0.0.0",
    "@types/glob": "^5.0.35",
    "@types/lodash": "^4.14.108",
    "axel": "0.0.3",
    "eventemitter2": "^5.0.1",
    "glob": "^7.1.2",
    "jest": "^22.4.3",
    "lodash": "^4.17.10",
    "ohm-js": "^0.14.0",
    "pify": "^3.0.0",
    "source-map-support": "^0.5.6",
    "speaker": "^0.4.1",
    "supports-color": "^5.4.0"
  },
  "devDependencies": {
    "@types/pify": "^3.0.2",
    "@types/supports-color": "^5.3.0",
    "eslint-plugin-typescript": "^0.12.0",
    "http-server": "^0.11.1",
    "istanbul": "^0.4.5",
    "standard": "^11.0.1",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".ts": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/test/*.+(ts|js)"
    ]
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "plugins": [
      "typescript"
    ]
  }
}
